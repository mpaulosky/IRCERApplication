
@inherits TestComponentBase

	<Fixture Test="CounterRazorButtonTest" Discription="Counter Component returns expected count">
    <ComponentUnderTest>
        <Counter />
    </ComponentUnderTest>
		<Fragment>
			<p>Current count: 1</p>
		</Fragment>

		@code {
			public void CounterRazorButtonTest(Fixture fixture)
			{
				// Arrange				
				var cut = fixture.GetComponentUnderTest<Counter>();

				// Act - click button to increment counter
				cut.Find("button").Click();

				// Assert that the counter was incremented
				var expected = fixture.GetFragment();
				cut.Find("p").MarkupMatches(expected);
			}
		}
	</Fixture>

	<Fixture Test="CounterRazorTest" Description="Counter Component InitialLoad Returns Expected Results">
    <ComponentUnderTest>
        <Counter />
    </ComponentUnderTest>
    <Fragment>
        <h1>Counter</h1>

        <p>Current count: 0</p>

        <button class="btn btn-primary">Click me</button>
    </Fragment>
	@code {
		public void CounterRazorTest(Fixture fixture)
		{
			// Arrange
			var cut = fixture.GetComponentUnderTest<Counter>();

			// Assert
			var expected = fixture.GetFragment();

			cut.MarkupMatches(expected);
		}
	}
</Fixture>



